<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Foundation | Welcome</title>
    <link rel="stylesheet" href="/css/foundation.css" />
    <link rel="stylesheet" href="/css/app.css" />
    <script src="/js/vendor/modernizr.js"></script>
  </head>
  <body>

    <nav class="top-bar">

      <ul class="title-area">

        <li class="name"><h1><a href="/VCP">VCP</a></h1></li>

      </ul>

      <section class="top-bar-section">

        <ul>

          <li class="right"><a class="article" href="/VCP/new">Add an article</a></li>

          <form action="/VCP/results" method="GET">

            <li class="has-form">

              <div>
                <div class="large-8 small-9 columns">
                <input type="text" name="title" placeholder="search">
              </div>

              <div class="large-4 small-3 columns">
                <button>Search</button>
              </div>

            </li>

          </form>
          
        </ul>

      </section>

    </nav>

          <h1 class="top">A Vitriolic Cherry Pitt</h1>

    <div class="container">
          <!-- WORK IN HERE -->
      <div class="row">

        <div class="small-12 columns">


          <h2 class="heading">Featured Articles</h2>

          <hr/>
          <% display.forEach(function(page) { %>
          <div class="panel">
            <ul>
              <h3>
                <li><a href="/VCP/<%= page.content_id %>"><%= page.title %></a></li>
              </h3>
            </ul>
          </div>
          <hr/>
          <% }) %>
        </div>
      </div>
    </div>

    <footer class="footer">
      <div class="row full-width">
       <div class="small-12 medium 6 columns">
          <i class="fi-laptop"></i>
        </div>
      </div> 
    </footer>

    <script src="/js/vendor/jquery.js"></script>
    <script src="/js/foundation.min.js"></script>
    <script>
      $(document).foundation();
    </script>
  </body>
</html>
