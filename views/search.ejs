<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>search results</title>
</head>
<body>
  <header>
    <div class="row">
      <div class="small-12 columns">
        <nav class="navbar">
          <ul>
            <li class="menu"><a class="mlink" href="/VCP">Home</a></li>
            <li class="menu"><a class="mlink" href="/VCP/new">Add an article</a></li>
          <form action="/VCP/results" method="POST">
            <input type="text" name="title" placeholder="search">
            <button>Search</button>
          </form>
          </ul>
        </nav>
      </div>
    </div>
  </header>

  <div class="container">
    <div class="row">
      <div class="small-12 columns">
        <% results.forEach(function(result) { %>
          <h1>Results</h1>
          <ul>
            <li><a href="/VCP/<%= result.content_id %>"><%= result.title %></a></li>
          </ul>
        <% }) %>
      </div>
    </div>
  </div>

    <script src="/js/vendor/jquery.js"></script>
    <script src="/js/foundation.min.js"></script>
    <script>
      $(document).foundation();
    </script>
  </body>
</html>