<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Add content</title>
  <link rel="stylesheet" href="/css/foundation.css" />
    <link rel="stylesheet" href="/css/app.css" />
    <script src="/js/vendor/modernizr.js"></script>

</head>
<body>

  <nav class="top-bar">

      <ul class="title-area">

        <li class="name"><h1><a href="/VCP">VCP</a></h1></li>
        
      </ul>

      <section class="top-bar-section">

        <ul>

          <li class="right"><a class="article" href="/VCP/new">Add an article</a></li>

          <form action="/VCP/results" method="POST">

            <li class="has-form">

              <div>
                <div class="large-8 small-9 columns">
                <input type="text" name="title" placeholder="search">
              </div>

              <div class="large-4 small-3 columns">
                <button>Search</button>
              </div>

            </li>

          </form>
          
        </ul>

      </section>

    </nav>



	<form action="/VCP/new" method="POST">
    <div class="row">
      <div class="large-12 columns">
        <label for="email">Email Address:</label>
        <input type="text" name="user_email" placeholder="youremail@mail.com">
<!--         <input type="text" name="username" placeholder="enter a username">
        <label for="username">: User Name</label> -->
        <label for="title">Title:</label>
        <input type="text" name="title" placeholder="title of article">
        <label for="article">Article Content:</label>
        <textarea name="article" placeholder="input content here" cols="50" rows="50"></textarea>
    <!-- render all the users to choose from and store the user id in the value -->
  </div>
</div>
    <% users.forEach(function(user) { %>
      <select name="user_id">
        <option value="<%= user.user_id %>"><%= user.username %></option>
      </select>
    <% }) %>
    <button>Add Content!</button>
  </form>
  <script src="/js/vendor/jquery.js"></script>
  <script src="/js/foundation.min.js"></script>
  <script>
    $(document).foundation();
  </script>
</body>
</html>