<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>edit</title>
	<link rel="stylesheet" href="/css/foundation.css" />
    <link rel="stylesheet" href="/css/app.css" />
    <script src="/js/vendor/modernizr.js"></script>
</head>
<body>

  <nav class="top-bar">

      <ul class="title-area">

        <li class="name"><h1><a href="/VCP">VCP</a></h1></li>
        
      </ul>

      <section class="top-bar-section">

        <ul>

          <li class="right"><a class="article" href="/VCP/new">Add an article</a></li>

          <form action="/VCP/results" method="POST">

            <li class="has-form">

              <div>
                <div class="large-8 small-9 columns">
                <input type="text" name="title" placeholder="search">
              </div>

              <div class="large-4 small-3 columns">
                <button>Search</button>
              </div>

            </li>

          </form>
          
        </ul>

      </section>

    </nav>

	<div class="container">
		<div class="row">
      <div class="large-12">
			<!-- Allows user to edit the content by content_id number -->
  			<form action="/VCP/<%= content.content_id %>?_method=PUT" method="POST">
          <label for="title">Title: </label>
  				<input type="text" name="title" placeholder="<%= content.title %>">
          <label for="article">Article Content:</label>
  				<textarea name="article"cols="50" rows="50"><%= content.article %></textarea>
  				<button>Submit</button>
  				<input type="hidden" name="user_id" value="<%=  content.user_id %>">
			 </form>
      </div>
		</div>
	</div>
  <script src="/js/vendor/jquery.js"></script>
  <script src="/js/foundation.min.js"></script>
  <script>
    $(document).foundation();
  </script>
</body>
</html>